@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="margin-left: 30px;">Cari Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CariID)
        @Html.LabelFor(x => x.CariAd, new { style = "margin-left: 30px" })
        @Html.TextAreaFor(x => x.CariAd, new { style = "margin-left: 30px", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CariAd, "", new { style = "margin-left: 30px; color: red" })
        <br />
        @Html.LabelFor(x => x.CariSoyad, new { style = "margin-left: 30px" })
        @Html.TextAreaFor(x => x.CariSoyad, new { style = "margin-left: 30px", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CariSoyad, "", new { style = "margin-left: 30px; color: red" })
        <br />
        @Html.LabelFor(x => x.CariSehir, new { style = "margin-left: 30px" })
        @Html.TextAreaFor(x => x.CariSehir, new { style = "margin-left: 30px", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CariSehir, "", new { style = "margin-left: 30px; color: red" })
        <br />
        @Html.LabelFor(x => x.CariMail, new { style = "margin-left: 30px" })
        @Html.TextAreaFor(x => x.CariMail, new { style = "margin-left: 30px", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CariMail, "", new { style = "margin-left: 30px; color: red" })
        <br />
        <button style="background-color:yellowgreen;margin-left: 30px" class="btn btn-default">Güncelle</button>
    </div>
}

