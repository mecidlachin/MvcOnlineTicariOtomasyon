@model MvcOnlineTicariOtomasyon.Models.Sınıflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="margin-left: 30px">Yeni Kalem Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Aciklama, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.Aciklama, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Miktar, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.Miktar, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BirimFiyat, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.BirimFiyat, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tutar, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.Tutar, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.FaturaID, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.FaturaID, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    <button style="margin-left: 30px" class="btn btn-info">Kaydet</button>
</form>

