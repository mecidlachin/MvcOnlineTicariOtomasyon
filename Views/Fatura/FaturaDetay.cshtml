@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="margin-left: 30px">Fatura Kalemleri Sayfası</h2>
<br />

<ol class="breadcrumb mb-4" style="margin-left: 30px">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover" style="margin-left: 30px">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemID</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
        </tr>
    }
</table>

<a href="/Fatura/YeniKalem/" class="btn btn-default" style="margin-left: 30px; background-color: darksalmon">Yeni Kalem Girişi</a>

