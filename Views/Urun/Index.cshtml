@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p style="margin-left: 30px;">
        Ürün Adı : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered" style="margin-top: 30px; margin-left: 30px;">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyat ₺</td>
            <td>@u.SatisFiyat ₺</td>
            <td>@u.Kategori.KategoriAd</td>
            <td>
                <a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger" style="margin-left: 30px;">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success" style="margin-left: 30px;">Güncelle</a>
            </td>
            <td>
                <a href="/Urun/SatisYap/@u.UrunID" class="btn btn-default" style="margin-left: 30px; background-color:burlywood">Satış Yap</a>
            </td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary" style="margin-left: 30px;">Yeni Ürün</a>

