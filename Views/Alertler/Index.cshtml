
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/jquery-3.7.1.js"></script>

<br />
<br />
<button style="margin-left:30px;" class="btn btn-primary" id="btn1">Buton1</button>
<button style="margin-left:30px;" class="btn btn-warning" id="btn2">Buton2</button>
<button style="margin-left:30px;" class="btn btn-info" id="btn3">Buton3</button>
<button style="margin-left:30px;" class="btn btn-danger" id="btn4">Buton4</button>
<button style="margin-left:30px;background-color: lightcoral" class="btn btn-default" id="btn5">Buton5</button>

<script>
    $('#btn1').click(function () {
        Swal.fire("Merhaba Dünya!");
    });
</script>

<script>
    $('#btn2').click(function () {
        Swal.fire("Burası Başlık!", "Burası Metin!");
    });
</script>

<script>
    $('#btn3').click(function () {
        Swal.fire({
            title: "Good Job!",
            text: "You Clicked The Button!",
            icon: "success"
        });
    });
</script>

<script>
    $('#btn4').click(function () {
        Swal.fire({
            title: "Click on either the button or outside the modal.",
            showCancelButton: true,
            confirmButtonText: "I clicked the button",
            cancelButtonText: "Outside the modal",
            focusConfirm: false,
            focusCancel: true
        }).then((result) => {
            if (result.value) {
                Swal.fire("You clicked the button!");
            } else {
                Swal("You clicked outside the modal!");
            }
        });
    });
</script>

<script>
    $('#btn5').click(function () {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Deleted!",
                    text: "Your file has been deleted.",
                    icon: "success"
                });
            }
        });
    });
</script>






