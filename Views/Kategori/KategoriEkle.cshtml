@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.1.js"></script>
<br />
<h2 style="margin-left: 30px">Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd, new {style = "margin-left: 30px"} )
    @Html.TextBoxFor(x => x.KategoriAd, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    <button style="margin-left: 30px" class="btn btn-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategori Başarılı Bir Şekilde Eklendi")
        });
    </script>
</form>

