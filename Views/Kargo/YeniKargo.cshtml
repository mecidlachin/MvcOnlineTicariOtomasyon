@model MvcOnlineTicariOtomasyon.Models.Sınıflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="margin-left: 30px">Yeni Kargo Bilgisi Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TakipKodu, new { style = "margin-left: 30px" })
    <input type="text" value="@ViewBag.takipkod" style="margin-left: 30px;" class="form-control" readonly name="TakipKodu"/>
    <br />
    @Html.LabelFor(x => x.Personel, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.Personel, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Alici, new { style = "margin-left: 30px" })
    @Html.TextBoxFor(x => x.Alici, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TakipKodu, new { style = "margin-left: 30px" })
    <input class="form-control" type="date" name="Tarih" style="margin-left: 30px;" />
    <br />
    @Html.LabelFor(x => x.Aciklama, new { style = "margin-left: 30px" })
    @Html.TextAreaFor(x => x.Aciklama, new { style = "margin-left: 30px", @class = "form-control" })
    <br />
    <button style="margin-left: 30px" class="btn btn-info">Kaydet</button>
</form>


