@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Departman
@{
    ViewBag.Title = "DepartmanGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="margin-left: 30px">Departman Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmanAd, new { style = "margin-left: 30px" })
        @Html.TextBoxFor(x => x.DepartmanAd, new { style = "margin-left: 30px", @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmanID)
    </div>
    <button style="background-color:yellowgreen;margin-left: 30px" class="btn btn-default">Güncelle</button>
}

